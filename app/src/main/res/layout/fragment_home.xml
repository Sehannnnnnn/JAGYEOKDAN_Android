                            android:layout_marginVertical="8dp"
                            android:fontFamily="@font/a_title_gothic1"
                            android:lineSpacingExtra="8dp"
                            android:text="한자 4급"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/text_Dnext_to_date_third"
