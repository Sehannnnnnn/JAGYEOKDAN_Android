<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/a_title_gothic3"
            android:gravity="center_vertical"
            android:text="필터 선택"
            android:textColor="@color/black"
            android:textSize="17dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/click_button_sort_hangul"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/license_detail_info_round_box"
            android:fontFamily="@font/a_title_gothic2"
            android:text="가나다 순"
            android:textColor="@color/main_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/click_button_sort_zimm"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/license_detail_info_round_box"
            android:fontFamily="@font/a_title_gothic2"
            android:text="찜 많은 순"
            android:textColor="@color/main_color"
            android:textSize="11sp" />

        <Button
            android:id="@+id/click_button_sort_applydate"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/license_detail_info_round_box"
            android:fontFamily="@font/a_title_gothic2"
            android:text="신청날짜 순"
            android:textColor="@color/main_color"
            android:textSize="11sp" />

        <Button
            android:id="@+id/click_button_sort_testdate"
            android:layout_width="60dp"
            android:layout_height="24dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/license_detail_info_round_box"
            android:fontFamily="@font/a_title_gothic2"
            android:text="시험 순"
            android:textColor="@color/main_color"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/button_apply_sorting"
            android:layout_width="248dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_membership_btn"
            android:fontFamily="@font/a_title_gothic3"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>

