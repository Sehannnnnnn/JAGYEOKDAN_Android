                        android:layout_marginHorizontal="3dp">

                        <ImageView
                            android:id="@+id/list_dot"
                            android:layout_width="6dp"
                            android:layout_height="6dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
