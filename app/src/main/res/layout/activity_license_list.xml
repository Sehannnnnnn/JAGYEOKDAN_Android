                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/boxtype_for_single_element"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp">

                    <RelativeLayout
