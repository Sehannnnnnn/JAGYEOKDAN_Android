<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LicenseListActivity">

    <LinearLayout
        android:id="@+id/license_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/license_list_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_backward_to_license_info"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/right1" />

            <TextView
                android:id="@+id/license_list_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="IT·인터넷"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_of_text_category"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_below="@id/license_list_category_name"
                android:layout_centerHorizontal="true"
                android:src="@drawable/category_name1" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_below="@id/image_of_text_category"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/gray_underline" />

        </RelativeLayout>

        <!--자격증 인기 순위-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:id="@+id/license_ranking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="자격증 인기 순위"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/license_ranking_title"
                android:layout_centerInParent="true"
                android:layout_marginTop="7dp"
                android:background="@drawable/gray_blue_boxtype_background">

                <!--1위-->
                <LinearLayout
                    android:id="@+id/linearlayout_name_of_rank1_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_rank1"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/rank1_icon" />

                    <TextView
                        android:id="@+id/tv_name_of_rank1_license"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="정보처리기사"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:id="@+id/division_rank1_rank2"
                    android:layout_width="320dp"
                    android:layout_height="1dp"
                    android:layout_below="@id/linearlayout_name_of_rank1_license"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/gray_underline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/division_rank1_rank2"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="13dp">

                    <!--2위-->
                    <RelativeLayout
                        android:id="@+id/rank2_container"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">

                        <ImageView
                            android:id="@+id/num2_rank"
                            android:layout_width="13dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/number_2" />

                        <TextView
                            android:id="@+id/name_of_rank2_license"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/num2_rank"
                            android:gravity="center_vertical"
                            android:text="리눅스 마스터"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/watch_more_rank2"
                            android:layout_width="6dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/watch_more" />

                    </RelativeLayout>

                    <!--3위-->
                    <RelativeLayout
                        android:id="@+id/rank3_container"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@id/rank2_container"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:id="@+id/num3_rank"
                            android:layout_width="13dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/number_3" />

                        <TextView
                            android:id="@+id/name_of_rank3_license"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/num3_rank"
                            android:gravity="center_vertical"
                            android:text="전자상거래 운용사 1급"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/watch_more_rank3"
                            android:layout_width="6dp"
                            android:layout_height="12dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/watch_more" />

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_underline" />

        <!--자격증 목록-->
