<?xml version="1.0"?>

<resources>

    <!-- Base application theme. -->

    <style name="Theme.Happylife" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->

        <!--상태바 색상 변경-->
        <item name="android:statusBarColor">@color/white</item>

        <!--상태바 아이콘 색상 어둡게 변경-->
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->

        <item name="colorSecondary">@color/teal_200</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>

        <item name="colorOnSecondary">@color/black</item>

    </style>

    <style name="menu_strings">

        <item name="android:textSize">14sp</item>

        <item name="android:letterSpacing">0.07</item>

        <item name="android:textColor">#000000</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="navTextInactive">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>

    </style>

    <style name="navTextActive">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/a_title_gothic2</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>